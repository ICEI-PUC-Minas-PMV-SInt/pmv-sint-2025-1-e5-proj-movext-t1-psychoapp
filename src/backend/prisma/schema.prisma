generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  cpf            String   @unique
  email          String   @unique
  telefone       String
  dataNascimento DateTime @db.Date
  cidade         String
  estado         String
  password       String

  //Relacionamentos:

  profissional Profissional? 
  paciente     Paciente?
}

model Profissional {
  id                     String @id @default(auto()) @map("_id") @db.ObjectId
  tipoAtendimento        String
  trajetoriaProfissional String
  profileimg             String

  //Relacionamentos:

  usuarioId String  @unique @db.ObjectId // Chave estrangeira
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade) // Relacionamento com a tabela Usuario
}

model Paciente {
  id                     String  @id @default(auto()) @map("_id") @db.ObjectId
  necessidadeAtendimento String
  diagnostico            Boolean
  qualDiagnostico        String?
  encaminhamento         String
  queixas                String
  profileimg             String

  //Relacionamentos:

  usuarioId String  @unique @db.ObjectId // Chave estrangeira
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade) // Relacionamento com a tabela Usuario
}
